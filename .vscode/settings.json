{
  // The repository is mainly JSON with 2 spaces per indent-level.
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "json.schemas": [
    {
      "fileMatch": [
        "/lang/*.json"
      ],
      "url": "./.vscode/probe.lang-schema.json"
    },
    {
      "fileMatch": [
        "/probe/docs/*.json"
      ],
      "url": "./.vscode/probe.doc-schema.json"
    }
  ]
}